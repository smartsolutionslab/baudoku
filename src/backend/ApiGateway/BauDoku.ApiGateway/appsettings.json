{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "projects-route": {
        "ClusterId": "projects-cluster",
        "Match": {
          "Path": "/api/projects/{**catch-all}"
        }
      },
      "documentation-route": {
        "ClusterId": "documentation-cluster",
        "Match": {
          "Path": "/api/documentation/{**catch-all}"
        }
      },
      "sync-route": {
        "ClusterId": "sync-cluster",
        "Match": {
          "Path": "/api/sync/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "projects-cluster": {
        "Destinations": {
          "projects-api": {
            "Address": "http://projects-api"
          }
        }
      },
      "documentation-cluster": {
        "Destinations": {
          "documentation-api": {
            "Address": "http://documentation-api"
          }
        }
      },
      "sync-cluster": {
        "Destinations": {
          "sync-api": {
            "Address": "http://sync-api"
          }
        }
      }
    }
  }
}
