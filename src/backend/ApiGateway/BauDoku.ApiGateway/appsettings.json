{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning",
        "System.Net.Http.HttpClient": "Warning"
      }
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Authentication": {
    "Keycloak": {
      "Authority": "http://localhost:8080/realms/baudoku",
      "ClientId": "baudoku-app"
    }
  },
  "ReverseProxy": {
    "Routes": {
      "projects-route": {
        "ClusterId": "projects-cluster",
        "Match": {
          "Path": "/api/projects/{**catch-all}"
        }
      },
      "documentation-route": {
        "ClusterId": "documentation-cluster",
        "Match": {
          "Path": "/api/documentation/{**catch-all}"
        }
      },
      "sync-route": {
        "ClusterId": "sync-cluster",
        "Match": {
          "Path": "/api/sync/{**catch-all}"
        }
      },
      "web-ui-route": {
        "ClusterId": "web-ui-cluster",
        "Order": 1000,
        "Match": {
          "Path": "{**catch-all}"
        }
      }
    },
    "Clusters": {
      "projects-cluster": {
        "Destinations": {
          "projects-api": {
            "Address": "http://projects-api"
          }
        }
      },
      "documentation-cluster": {
        "Destinations": {
          "documentation-api": {
            "Address": "http://documentation-api"
          }
        }
      },
      "sync-cluster": {
        "Destinations": {
          "sync-api": {
            "Address": "http://sync-api"
          }
        }
      },
      "web-ui-cluster": {
        "Destinations": {
          "web-ui": {
            "Address": "http://localhost:5173"
          }
        }
      }
    }
  }
}
