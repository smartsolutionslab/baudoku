{
  "realm": "baudoku",
  "enabled": true,
  "registrationAllowed": false,
  "loginWithEmailAllowed": true,
  "duplicateEmailsAllowed": false,
  "sslRequired": "none",
  "accessTokenLifespan": 300,
  "ssoSessionMaxLifespan": 1800,
  "roles": {
    "realm": [
      { "name": "admin", "description": "Administrator mit vollen Rechten" },
      { "name": "user", "description": "Standard-Benutzer" },
      { "name": "inspector", "description": "Pr√ºfer / Inspektor" }
    ]
  },
  "clients": [
    {
      "clientId": "baudoku-mobile",
      "enabled": true,
      "publicClient": true,
      "standardFlowEnabled": true,
      "directAccessGrantsEnabled": true,
      "redirectUris": [
        "baudoku://auth/callback",
        "exp://*/--/auth/callback",
        "exp://*",
        "http://localhost:8081",
        "http://localhost:8081/*",
        "http://10.0.0.6:8081",
        "http://10.0.0.6:8081/*"
      ],
      "webOrigins": [
        "http://localhost:8081",
        "http://10.0.0.6:8081",
        "*"
      ],
      "attributes": {
        "pkce.code.challenge.method": "S256"
      },
      "protocol": "openid-connect",
      "fullScopeAllowed": true,
      "protocolMappers": [
        {
          "name": "audience-mapper",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-audience-mapper",
          "config": {
            "included.client.audience": "baudoku-api",
            "id.token.claim": "false",
            "access.token.claim": "true"
          }
        }
      ]
    },
    {
      "clientId": "baudoku-web",
      "enabled": true,
      "publicClient": true,
      "standardFlowEnabled": true,
      "directAccessGrantsEnabled": false,
      "redirectUris": [
        "http://localhost:5000/*",
        "http://localhost:5173/*",
        "http://127.0.0.1:5173/*",
        "http://10.0.0.6:5173/*"
      ],
      "webOrigins": [
        "http://localhost:5000",
        "http://localhost:5173",
        "http://127.0.0.1:5173",
        "http://10.0.0.6:5173"
      ],
      "attributes": {
        "pkce.code.challenge.method": "S256",
        "post.logout.redirect.uris": "http://localhost:5000/*##http://localhost:5173/*##http://10.0.0.6:5173/*"
      },
      "protocol": "openid-connect",
      "fullScopeAllowed": true,
      "protocolMappers": [
        {
          "name": "audience-mapper",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-audience-mapper",
          "config": {
            "included.client.audience": "baudoku-api",
            "id.token.claim": "false",
            "access.token.claim": "true"
          }
        }
      ]
    },
    {
      "clientId": "baudoku-api",
      "enabled": true,
      "publicClient": false,
      "bearerOnly": true,
      "standardFlowEnabled": false,
      "directAccessGrantsEnabled": false,
      "protocol": "openid-connect",
      "fullScopeAllowed": true,
      "protocolMappers": [
        {
          "name": "audience-mapper",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-audience-mapper",
          "config": {
            "included.client.audience": "baudoku-api",
            "id.token.claim": "false",
            "access.token.claim": "true"
          }
        }
      ]
    }
  ],
  "users": [
    {
      "username": "demo@baudoku.de",
      "email": "demo@baudoku.de",
      "emailVerified": true,
      "enabled": true,
      "firstName": "Max",
      "lastName": "Mustermann",
      "credentials": [
        {
          "type": "password",
          "value": "demo123",
          "temporary": false
        }
      ],
      "realmRoles": ["admin", "user"]
    }
  ]
}
