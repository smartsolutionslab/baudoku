{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning",
        "System.Net.Http.HttpClient": "Warning"
      }
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Sync": {
    "SchedulerIntervalSeconds": 30
  },
  "Authentication": {
    "Keycloak": {
      "Authority": "http://localhost:8080/realms/baudoku",
      "Audience": "baudoku-api"
    }
  }
}
